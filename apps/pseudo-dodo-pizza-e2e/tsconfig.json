/* [ ](governance): CC-BY */

{
	"extends": "../../tsconfig.base.json",
	"include": [
		"**/*.ts",
		"**/*.js",
		"playwright.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.spec.js",
		"src/**/*.test.ts",
		"src/**/*.test.js",
		"src/**/*.d.ts"
	],
	"compilerOptions": {
		"allowJs": true,
		"outDir": "../../dist/out-tsc",
		"module": "commonjs",
		"sourceMap": false,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	}
}
